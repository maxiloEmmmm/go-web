func newApi(client *Client, opt *ApiOption) *Api {
    obj := &Api{Client: client}

    if opt != nil {
        if len(opt.Fields) > 0 {
            af := ActionFields{}
            af.SetFields(opt.Fields["Create"])
            obj.Fields.Create = af

            af = ActionFields{}
            af.SetFields(opt.Fields["Update"])
            obj.Fields.Update = af
        }
    }
    return obj
}

